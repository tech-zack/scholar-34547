<%= render "shared/header"%>
<%# 投稿一覧 %>
<ul class='scholar-lists'>
  <% @scholars.each do |scholar| %>
    <li class='list'>
       <%= link_to scholar_path(scholar.id) do %>
        <div class='scholar-info'>
        <div class='scholar-img-content'>
         <%= image_tag scholar.image, class: 'scholar-img'if scholar.image.attached? %>
        </div>
        <a class='scholar-title'>
            <%= truncate(scholar.title, length:15) do%>
            <%= link_to "続きを読む" ,scholar_path(scholar.id),class:"scholar-read" %>
            <%end%>
          </a>
        </div>
       <% end %>
      </li>
     <% end %>
</ul>
<%= paginate @scholars %>
<%#/ 投稿一覧 %>

<%= render "shared/footer" %>

