<header class='top-page-header'>
  <div class='search-bar-contents'>
    <%#= link_to imag_tag("", class:"scholar-icon"), "/" %>
    <form class="search-form" action= "#">
      <input class='input-box' placeholder='キーワードから探す'>
      <button class="search-button">
        <%#= image_tag "search.png", class:"search-icon" %>
      </button>
    </form>
  </div>
  <div class='nav'>
    <ul class='list-left'>
      <li><%= link_to 'scholarについて', "#", class: "lanking-list"%><li>
      <li><%= link_to 'カテゴリー', "#", class: "category-list"%><li>
      <li><%= link_to 'ランキング', "#", class: "lanking-list"%><li>
    </ul>
    <ul class='lists-left'>
      <% if user_signed_in?%>
        <li><%= link_to current_user.nickname, "#", class: "user-nickname" %></li>
        <li><%=link_to 'ログアウト', destroy_user_session_path, method: :delete,class: "logout"%>
          <% else %>
            <li><%=link_to 'ログイン', new_user_session_path, class: "logout"%>
            <li><%=link_to '新規登録', new_user_registration_path,class: "sign-up"%>
            <% end %>
    </ul>
  </div>
</header>
