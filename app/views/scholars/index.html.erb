<%= render "shared/third-header"%>
<%= render "shared/second-header"%>
<%= render "shared/header"%>
<div class='main'>
<%# 画面上部の画像部分%>
  <div class='title-contents'>
    <div class='service-title'>
      勉強から学習へ、学習から学問へ scholarはあなたのPOSTを待っています
    </div>
  </div>
<%# /画面上部の画像部分%>

<%# 投稿機能 %>
<%= link_to(new_scholar_path, class: 'post-red-btn') do %>
  <span class='post-btn-text'>POST</span>
<%end%>
<%# /投稿機能 %>

 <%# ピックアップカテゴリー%>
 <div class='scholar-contens'>
    <h2 class='title'>What's news</h2>
    <ul class='scholar-lists'>
      <% @scholars.each do |scholar|%>
      <li class='list'>
       <%= link_to scholar_path(scholar.id) do %>
        <div class='scholar-info'>
          <div class='scholar-img-content'>
            <%= image_tag scholar.image, class: 'scholar-img'%>
          </div>
          <div class='scholar-text'>
         <%= scholar.text %>
          <a class='scholar-title'>
            <%= truncate(scholar.title, length:15) do%>
            <%= link_to "続きを読む" ,scholar_path(scholar.id),class:"scholar-read" %>
            <div class='scholar-text'>
         <%= scholar.text %>
              <%end%>
            <%end%>
          </a>
        </div>
      </li>
     <% end %>
      <%if @scholars.length == 0%>
      <li class='list'>
        <%= link_to '#' do %>
        <%= image_tag "/images/Photoelly014_TP_V.jpg", class: "scholar-img" %>
        <% end %>
      </li>
      <% end %>
    </ul>
    <%= paginate @scholars %>
  </div>
  <%# ピックアップカテゴリー%>
  
<%= render "shared/second-footer"%>